@inherits UmbracoViewPage<CheckoutShippingPaymentMethodPage>
@{
    Layout = "CheckoutStepPage.cshtml";
}

@using (Html.BeginUmbracoForm("UpdateOrderShippingAndPaymentMethod", "CheckoutSurface"))
{
